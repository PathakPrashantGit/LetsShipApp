<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--for parallel execution use parallel attribut int testng suit-->
<suite name="Suite" parallel ="tests" thread-count ="6">

 <listeners>
    <listener class-name="Utility.Listeners"></listener>
 
 </listeners>
 
  <test thread-count="5" name="By chrome">
  <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="Test.LoginTest"/>
    </classes>
  </test> <!-- Test -->
  
  
   <test thread-count="5" name="By firefox">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="Test.LoginTest"/>
    </classes>
  </test> <!-- Test -->
  
  
   <test thread-count="5" name="By Edge">
  <parameter name="browser" value="edge"></parameter>
    <classes>
      <class name="Test.LoginTest"/>
    </classes>
  </test> <!-- Test -->
  
</suite> <!-- Suite -->
